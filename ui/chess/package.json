{
  "name": "@eyss/chess",
  "description": "Webcomponent hc-elo following open-wc recommendations",
  "license": "MIT",
  "author": "guillem.cordoba@gmail.com",
  "version": "0.0.0",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "scripts": {
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "build": "rimraf tsconfig.tsbuildinfo && tsc && npm run analyze -- --exclude dist",
    "build:watch": "rimraf tsconfig.tsbuildinfo && tsc && tsc --watch --preserveWatchOutput",
    "prepublish": "tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "publish-to-branch": "npm run lint && npm run build && gh-pages -d ./ -b ui-build"
  },
  "dependencies": {
    "@eyss/elo": "github:eyss/elo#ui-build",
    "@eyss/invitations": "github:eyss/invitations#ui-build",
    "@eyss/turn-based-game": "github:eyss/turn-based-game#ui-build",
    "@holochain-open-dev/cell-client": "0.0.8",
    "@holochain-open-dev/core-types": "0.1.1",
    "@holochain-open-dev/profiles": "github:holochain-open-dev/profiles#ui-build",
    "@lit-labs/context": "github:holochain-open-dev/context.git#build",
    "@open-wc/scoped-elements": "^2.0.1",
    "@scoped-elements/material-web": "^0.0.14",
    "chess.js": "^0.11.0",
    "chessboard-element": "^1.2.0",
    "lit": "^2.0.2",
    "lit-svelte-stores": "^0.1.3"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.17",
    "@open-wc/eslint-config": "^4.3.0",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-replace": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@web/dev-server": "^0.1.25",
    "@web/dev-server-rollup": "^0.3.11",
    "concurrently": "^5.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "gh-pages": "^3.2.3",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "prettier": "^2.4.1",
    "rollup-plugin-node-builtins": "^2.1.2",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "customElements": "custom-elements.json",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-empty-function": "off",
      "no-shadow": "off",
      "no-useless-constructor": "off",
      "class-methods-use-this": "off",
      "no-new": "off",
      "camelcase": "off",
      "import/extensions": "off",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off"
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
